<div class="page_title">
    <h1>Business Expenses</h1>
    <div class="page_title_button"><%= link_to "add new expenditure", new_expend_path %></div>
</div>


<div class="filter_band_single">
    <%= form_tag business_path, method: :get do %>
    <div class="filter_search">
        <div class="filter_project_label">Account:</div>
        <div class="filter_project_input">
            <%= select_tag 'companyaccount_id', options_from_collection_for_select(@companyaccounts, :id, :name, @companyaccount), :prompt => 'all jobs'%>    
        </div>
        <div class="filter_date_1_label">From:</div>
        <div class="filter_date_1_input">
            <%= date_field_tag 'date_from', value = @date_from %>
        </div>
        <div class="filter_date_2_label">To:</div>
        <div class="filter_date_2_input">
            <%= date_field_tag 'date_to', value = @date_to  %>
        </div>
        <div class="filter_submit">
            <%= submit_tag 'Filter', :class => "filter_submit_button"%>
        </div>
    </div>
    <% end %>
    <div class="option_band_submit"><%= submit_tag 'pdf', :class => "options_pdf_icon"%></div>
</div>


<div class="table_content_with_filter">
    <table>
      <thead>
        <tr>
          <th class="expend_ref">Ref</th>
          <th class="expend_paid">Paid to</th>
          <th class="expend_method">Payment Method</th>
          <th class="expend_account">Account</th>
          <th class="expend_receipt">Receipt</th>
          <th class="expend_date">Date</th>
          <th class="expend_price">Price</br><span class="vat_note">(ex VAT)</span></th>
          <th class="expend_vat">Vat</th>
          <th class="expend_total">Total</br><span class="vat_note">(Inc VAT)</span></th>
          <th class="expend_note">Note</th>
          <th width="20px" class="row_button"></th>
          <th width="20px" class="row_button"></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
          <% if @expends %>            
            <% @expends.each do |expend| %>
              <tr>
                <td class="expend_ref"><%= expend.ref %></td>
                <% if expend.personal? %>
                    <td class="expend_paid"><%= expend.user.name %></td>
                <% else %>
                    <td class="expend_paid"><%= expend.expense.supplier.company_name %></td>
                <% end %>
                <td class="expend_metdod"><%= expend.paymethod.method %></td>
                <td class="expend_account"><%= expend.companyaccount.name %></td>
                <td class="expend_receipt"><%= expend.expend_receipt %></td>
                <td class="expend_date"><%= expend.date.strftime("%d/%m/%y") %></td>
                <td class="expend_price"><%= pounds(expend.price) %></td>
                <td class="expend_vat"><%= pounds(expend.vat) %></td>
                <td class="expend_total"><%= pounds(expend.total) %></td>
                <td class="expend_note"><%= expend.note %></td>
                <% if expend.reconciled? %>
                    <td width="20px" class="row_button"><%= link_to "", edit_expend_path(expend), class: 'line_edit_icon', title: "edit mileage record" %></td>
                    <td width="20px" class="row_button"><%= link_to "", expend, method: :delete, class: 'line_delete_icon', title: "delete mileage record" %></td>
                <% else %>
                    <td width="20px" class="row_button"></td>
                    <td width="20px" class="row_button"></td>
                <% end %>
              </tr>       
            <% end %>
          <% end %>
          </tbody>
        </table>
    </div>
</div>
