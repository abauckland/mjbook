<div class="row title_band">
    <div class="page_title">
        <h1>Expense Payment Details</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @expend} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@expend) do |f| %>
                    <fieldset>

                        <!-- show text line -->
                        <label class="label_80">Expenditure Type:</label>
                        <span><%= @expend.exp_type %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@expend.price) %></span></br>

                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@expend.vat) %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@expend.total) %></span></br>


                        <!-- form input[select -->
                        <div class="form_tooltip" id="payexpense_paymethod"></div>
                        <label class="label_80">Payment Method:*</label>
                        <span>
                            <%= f.collection_select(:paymethod_id, @paymethods, :id, :text, {selected: @expend.paymethod_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="payexpense_account"></div>
                        <label class="label_80">Account Paid From:*</label>
                        <span>
                            <%= f.collection_select(:companyaccount_id, @companyaccounts, :id, :name, {selected: @expend.companyaccount_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="payexpense_reference"></div>
                        <label class="label_80">Reference:</label>
                        <span>
                            <%= f.text_field :ref %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="payexpense_date"></div>
                        <label class="label_80">Date:*</label>
                        <span>
                            <%= f.date_field :date, {placeholder: 'dd/mm/yyyy'} %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="payexpense_notes"></div>
                        <label class="label_80">Notes:</label>
                        <span>
                            <%= f.text_field :note %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", expends_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
