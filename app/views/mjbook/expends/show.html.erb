<div class="row title_band">
    <div class="page_title">
        <h1>Expenditure Item</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <%= render :partial => "flash_notice" %>
<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line -->
                        <label class="label_80">Reference:</label>
                        <span><%= @expend.ref if @expend.ref %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">Date:</label>
                        <span><%= @expend.date.strftime("%d/%m/%y") %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">Payment Method:</label>
                        <span><%= @expend.paymethod.method.titleize %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Account:</label>
                        <span><%= @expend.companyaccount.name.titleize %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Expense Cat:</label>
                        <span><%= @expend.hmrcexpcat.category.titleize %></span></br>

                        <% if @expend.receipt %>
                        <!-- show text line -->
                        <label class="label_80">Receipt:</label>
                        <span><%= image_tag(@expend.receipt, width: "140px") %></span></br>
                        <% end %>
    
                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@expend.price) %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@expend.vat) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@expend.total) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Notes:</label>
                        <span><%= @expend.note %></span></br>

                    </div>
                </div>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to "edit details", edit_expend_path(@expend) %>
                    <%= link_to "back", expends_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>


