<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @project} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@project) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>    
                    <%= f.hidden_field :invoicemethod_id, :value => 1 %>
                    <fieldset>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="project_ref"></div>
                        <label class="label_80">Reference:*</label>
                        <span>
                            <%= f.text_field :ref %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="project_title"></div>
                        <label class="label_80">Title:*</label>
                        <span>
                            <%= f.text_field :title %>
                        </span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="project_customer"></div>
                        <label class="label_80">Customer:*</label>
                        <% if @customers %>
                            <span>
                                <%= f.collection_select(:customer_id, @customers, :id, :company_name, {:prompt => :true})%>
                            </span></br>
    
                            <!-- link button -->
                            <label class="label_80"></label>
                        <% end %>
                        <span>
                            <%= link_to "add new customer", new_customer_path, class: "form_button" %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="project_customer_ref"></div>
                        <label class="label_80">Customer Ref:</label>
                        <span>
                            <%= f.text_field :customer_ref %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="project_description"></div>
                        <label class="label_80">Description:</label>
                        <span>
                            <%= f.text_area :description, {rows: 6, maxlength: 200, class: "maxlength"} %>
                            <p class="input_note">Maximum of 200 characters</p>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", projects_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
