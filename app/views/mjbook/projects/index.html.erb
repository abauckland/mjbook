<div class="page_title">
    <h1>Job List</h1>
    <div class="page_title_button"><%= link_to "add new project", new_project_path %> </div>
</div>

 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="project_ref">Ref</th>
          <th class="project_title">Title</th>
          <th class="project_customer">Customer</th>
          <th class="project_customer_ref">Customer ref</th>
          <th class="project_description">Description</th>
          <th class="project_invoicemethod">Invoicemethod</th>
          <th width="20px" class="row_button"></th>
          <th width="20px" class="row_button"><%= link_to "", print_projects_path, class: 'table_pdf_icon', title: "download pdf" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td class="project_ref"><%= project.ref %></td>
                <td class="project_title"><%= project.title %></td>
                <td class="project_customer"><%= project.customer.name %></td>
                <td class="project_customer_ref"><%= project.customer_ref %></td>
                <td class="project_description"><%= project.description %></td>
                <td class="project_invoicemethod"><%= project.invoicemethod.method %></td>
                <td width="20px" class="row_button"><%= link_to "", edit_project_path(project), class: 'line_edit_icon', title: "edit project" %></td>
                <% if project_in_use(project) %>                
                <td width="20px" class="row_button"><%= link_to "", project, method: :delete, class: 'line_delete_icon', title: "delete project" %></td>
                <% else %>
                    <td width="20px" class="row_button"></td>
                <% end %>              
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

