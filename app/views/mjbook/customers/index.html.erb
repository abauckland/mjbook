<div class="page_title">
    <h1>Customers</h1>
    
    <div class="page_title_button"><%= link_to "add new customer", new_customer_path %> </div>
    
</div>

 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
            <th class="customer_name">Name</th>
            <th class="customer_position">Position</th>
            <th class="customer_address">Address</th>
            <th class="customer_phone">Phone</th>
            <th class="customer_alt_phone">Alt. Phone</th>
            <th class="customer_email">Email</th>
            <th class="customer_company">Company</th>
            <th class="customer_note">Notes</th>
            <th width="20px" class="row_button"><%= link_to "", new_customer_path, class: 'table_new_icon', title: "add new customer" %></th>
            <th width="20px" class="row_button"><%= link_to "", nil, class: 'table_pdf_icon', title: "download pdf" %></th>
            <th width="20px" class="row_button"><%= link_to "", nil, class: 'table_csv_icon', title: "download csv" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td class="customer_name"><%= customer.name %></td>
                <td class="customer_position"><%= customer.position %></td>
                <td class="customer_address">
        			<p><%= customer.address_1 %></p>
        			<p><%= customer.address_2 %></p>
        			<p><%= customer.city %></p>
        			<p><%= customer.county %></p>
        			<p><%= customer.country %></p>
        			<p><%= customer.postcode %></p>
                </td>
                <td class="customer_phone"><%= customer.phone %></td>
                <td class="customer_alt_phone"><%= customer.alt_phone %></td>
                <td class="customer_email"><%= customer.email %></td>
                <td class="customer_company"><%= customer.company_name %></td>
                <td class="customer_note"><%= customer.notes %></td>
                <td width="20px" class="row_button"><%= link_to "", edit_customer_path(customer), class: 'line_edit_icon', title: "edit customer" %></td>
                <td width="20px" class="row_button"><%= link_to "", customer, method: :delete, class: 'line_delete_icon', title: "delete customer" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

