<div class="row title_band">
    <div class="page_title">
        <h1>Customers Details</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-1">
        <div class="border">

            <%= render :partial => "flash_notice" %>
    
            <div class="row">
                <div class="sub-1-3 column_1">
                    <article>
                        <div class="article-set">

                        <!-- show text line --> 
                        <label class="label_80">Company:</label>
                        <span><%= @customer.company_name %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Title:</label>
                        <span><%= @customer.title %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">First Name:</label>
                        <span><%= @customer.first_name %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Surname:</label>
                        <span><%= @customer.surname %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Position:</label>
                        <span><%= @customer.position %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">E-mail:</label>
                        <span><%= @customer.email %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Tel:</label>
                        <span><%= @customer.phone %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Alt. Tel:</label>
                        <span><%= @customer.alt_phone %></span></br>

                        </div>
                    </div>
                </div>
                <div class="sub-1-3 column_2">
                    <article>
                        <div class="article-set">

                        <!-- show text line --> 
                        <label class="label_80">Address 1:</label>
                        <span><%= @customer.address_1 %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Address 2:</label>
                        <span><%= @customer.address_2 %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">City:</label>
                        <span><%= @customer.city %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">County:</label>
                        <span><%= @customer.county %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Country:</label>
                        <span><%= @customer.country %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">Postcode:</label>
                        <span><%= @customer.postcode %></span></br>

                        </div>
                    </div>                                       
                </div>
                <div class="sub-1-3 column_3">
                    <article>
                        <div class="article-set">

                        <!-- show text line --> 
                        <label class="label_80">Notes:</label>
                        <span><%= @customer.notes %></span></br>

                        </div>
                    </div> 
                </div>
            </div>
            
            <div class="row">
                <div class="form_footer">
                    <%= link_to "edit details", edit_customer_path(@customer) %>
                    <%= link_to "back", customers_path %>
                </div>
            </div>
        </div>
    </div>
</div>
