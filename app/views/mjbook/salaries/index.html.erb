<div class="page_title">
    <h1>Salary Payments</h1>
    <div class="page_title_button"><%= link_to 'New Payment', new_salary_path %> </div>
</div>


<div class="filter_band_single">
    <%= form_tag salaries_path, method: :get do %>
    <div class="filter_search">
        <div class="filter_project_label">Employee:</div>
        <div class="filter_project_input">
            <%= select_tag 'user_id', options_from_collection_for_select(@users, :id, :name, @user), :prompt => 'all employees'%>    
        </div>
        <div class="filter_date_1_label">From:</div>
        <div class="filter_date_1_input">
            <%= date_field_tag 'date_from', value = @date_from %>    
        </div>
        <div class="filter_date_2_label">To:</div>
        <div class="filter_date_2_input">
            <%= date_field_tag 'date_to', value = @date_to  %>      
        </div>
        <div class="filter_submit">
            <%= submit_tag 'Filter', :class => "filter_submit_button"%>    
        </div>        
    </div>
    <% end %>
    <div class="option_band_submit"><%= submit_tag 'pdf', :class => "options_pdf_icon"%></div> 
</div>   

 <div class="table_content_with_filter">
    <table>
      <thead>
        <tr>
          <th class="salary_employee">Employee</th>
          <th class="salary_paid">Paid</th>
          <th class="salary_date">Date</th>          
          <th class="salary_status">Status</th>
          <th width="75px" class="row_button"></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
          <% if @salaries %>            
            <% @salaries.each do |salary| %>
              <tr>
                <td class="salary_employee"><%= salary.user.name %></td> 
                <td class="salary_paid"><%= pounds(salary.total) %></td> 
                <td class="salary_date"><%= salary.date.strftime("%d/%m/%y") %></td>
                <td class="salary_status"><%= salary.status %></td>
                <td id="<%= salary.id %>_links" width="75px" class="row_button">
                <% if salary.reconciled? %>
                    <%= row_delete_link(salary, 'hidden') %>
                    <%= row_edit_link(salary, 'hidden') %>
                    <%= row_reconcile_link(salary, 'hidden') %> 
                <% else %>
                    <%= row_delete_link(salary, 'show') %>
                    <%= row_edit_link(salary, 'show') %>
                    <%= row_reconcile_link(salary, 'show')  %> 
                <% end %> 
                </td>
              </tr>
            <% end %>  
          <% end %>
          </tbody>
        </table>
    </div>
</div>

