<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @salary} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@salary) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="salary_employee"></div>
                        <label class="label_80">Employee:*</label>
                        <span>
                            <%= f.collection_select(:user_id, @users, :id, :name, {:selected => @salary.user_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="salary_total"></div>
                        <label class="label_80">Amount:*</label>
                        <span>
                            <%= f.text_field :total, {:placeholder => "0.00", :value => number_with_precision(f.object.total, :precision => 2)} %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="salary_date"></div>
                        <label class="label_80">Date:*</label>
                        <span>
                            <%= f.date_field :date %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", salaries_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
