<div class="row title_band">
    <div class="page_title">
        <h1>Miscellaneous Expense Item</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <%= render :partial => "flash_notice" %>
<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line -->
                        <label class="label_80">Reference:</label>
                        <span><%= @miscincome.ref if @miscincome.ref %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Issue date:</label>
                        <span><%= @miscincome.date.strftime("%d/%m/%y") %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">Job:</label>
                        <span><%= @miscincome.project.name %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Customer:</label>
                        <span><%= @miscincome.customer.company_name %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Customer Ref:</label>
                        <span><%= @miscincome.customer_ref %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@miscincome.price) %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@miscincome.vat) %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@miscincome.total) %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Status:</label>
                        <span><%= @miscincome.state %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Note:</label>
                        <span><%= @miscincome.note %></span></br>

                    </div>
                </article>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to "back", miscincomes_path %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>