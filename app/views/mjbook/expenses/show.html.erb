<div class="page_title">
    <h1>Expense Item</h1>
</div>

<div class="content">
    <div class="column_linked_container">          
    
        <div class="sub_column_linked_1">
            <div class="column_content">
                <div class="column_info">                        
                            <div class="column_info_item">
                                <label class="column_info_label">Reference:</label>                        
                                <div class="column_info_text"><%= @expense.ref %></div>
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">Issue date:</label>                        
                                <div class="column_info_text"><%= @expense.issue_date.strftime("%d/%m/%y") %></div>
                            </div>
                            <% if @expend.user_id %>
                            <div class="column_info_item">
                                <label class="column_info_label">Employee:</label>                        
                                <div class="column_info_text"><%= @expend.user.name %></div> 
                            </div>
                            <% end %>
                            <div class="column_info_item">
                                <label class="column_info_label">Project:</label>                        
                                <div class="column_info_text"><%= @expense.project.name %></div> 
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">Supplier:</label>                        
                                <div class="column_info_text"><%= @expense.supplier.company_name %></div> 
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">Expense Category:</label>                        
                                <div class="column_info_text"><%= @expense.hmrcexpcat.category %></div> 
                            </div>
                            <% if @expend.receipt %>
                            <div class="column_info_item">
                                <label class="column_info_label">Receipt:</label>                        
                                <div class="column_info_text"><%= image_tag(@expense.receipt) %></div> 
                            </div>
                            <% end %>
                            <div class="column_info_item">
                                <label class="column_info_label">Due Date:</label>                        
                                <div class="column_info_text"><%= @expense.due_date.strftime("%d/%m/%y") %></div>   
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">Price:</label>                        
                                <div class="column_info_text"><%= pounds(@expense.price) %></div>  
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">VAT:</label>                        
                                <div class="column_info_text"><%= pounds(@expense.vat) %></div>  
                            </div>
                            <div class="column_info_item">
                                <label class="column_info_label">Total:</label>                        
                                <div class="column_info_text"><%= pounds(@expense.total) %></div>v>  
                            </div>  
                            <div class="column_info_item">
                                <label class="column_info_label">Status:</label>                        
                                <div class="column_info_text"><%= @expense.status %></div>v>  
                            </div>  
                </div>
            </div>
        </div>
        <div class="sub_column_linked_2 column_linked_blank"></div>    
        <div class="sub_column_linked_3 column_linked_blank"></div> 
                   
        <div class="column_linked_footer">
            <div class="column_line"></div>
            <div class="column_submit"><%= link_to "edit details", edit_expense_path(@expense) %></div>
            <div class="column_cancel"><%= link_to "back", expenses_path %></div>
        </div>
            
    </div>
</div>