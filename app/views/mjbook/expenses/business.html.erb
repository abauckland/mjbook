<div class="page_title">
    <h1>Business Expenses</h1>
</div>


<div class="filter_band_single">
    <%= form_tag business_path, method: :get do %>
    <div class="filter_search">
        <div class="filter_project_label">Job:</div>
        <div class="filter_project_input">
            <%= select_tag 'project_id', options_from_collection_for_select(@projects, :id, :name, @project), :prompt => 'all jobs'%>    
        </div>
        <div class="filter_date_1_label">From:</div>
        <div class="filter_date_1_input">
            <%= date_field_tag 'date_from', value = @date_from %>    
        </div>
        <div class="filter_date_2_label">To:</div>
        <div class="filter_date_2_input">
            <%= date_field_tag 'date_to', value = @date_to  %>      
        </div>
        <div class="filter_submit">
            <%= submit_tag 'Filter', :class => "filter_submit_button"%>    
        </div>        
    </div>
    <% end %>
    <div class="option_band_button"><%= link_to "add expense", new_business_path %> </div>
</div>  


 <div class="table_content_with_filter">
    <table>
      <thead>
        <tr>
          <th class="mob_cell">Due Date</th>
          <th class="tab_cell">Job</th>
          <th class="lrg_cell">Category</th> 
          <th class="lrg_cell">Reference</th>
          <th class="mob_cell">Supplier</th>
          <th class="lrg_cell">Supplier Ref</th>         
          <th class="lrg_cell">Issue Date</th>          
          <th width="20px" class="row_button">Bill Image</th>
          <th class="lrg_cell">VAT</th>
          <th class="mob_cell">Amount</th>
          <th class="lrg_cell">Status</th>
          <th width="20px" class="row_button"><%= link_to "", new_business_path, class: 'table_new_icon', title: "add new bill recored" %></th>
          <th width="20px" class="row_button"><%= link_to "", nil, class: 'table_pdf_icon', title: "download pdf" %></th>
          <th width="20px" class="row_button"><%= link_to "", nil, class: 'table_csv_icon', title: "download csv" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
          <% if @businessexpenses %>
            
            <% @businessexpenses.each do |businessexpense| %>
              <tr>
                <td class="mob_cell"><%= businessexpense.due_date %></td>
                <td class="tab_cell"><%= businessexpense.project.ref %></td>
                <td class="lrg_cell"><%= businessexpense.hmrcexpcat.category %></td>
                <td class="lrg_cell"><%= businessexpense.ref %></td>
                <td class="mob_cell"><%= businessexpense.supplier.name %></td>
                <td class="lrg_cell"><%= businessexpense.supplier_ref %></td>
                <td class="lrg_cell"><%= businessexpense.date.strftime("%d/%m/%y") %></td>
                <td width="20px">
                    <% if businessexpense.receipt? %>
                        <%= link_to "", expense_path(businessexpense.id), class: 'line_view_icon', title: "view receipt" %>
                    <% end %>
                </td>
                <td class="lrg_cell"><%= pounds(businessexpense.vat) %></td>
                <td class="mob_cell"><%= pounds(businessexpense.amount) %></td>
                <td class="lrg_cell"><%= businessexpense.status %></td>               
                <% if businessexpense.status == "accepted" %>
                    <td width="20px" class="row_button"><%= link_to "", reject_expense_path(businessexpense), class: 'line_reject_icon', title: "mark not for payment" %></td>                
                <% else %>
                    <td width="20px" class="row_button"><%= link_to "", accept_expense_path(businessexpense), class: 'line_accept_icon', title: "mark for payment" %></td>
                <% end %>
                <td width="20px" class="row_button"><%= link_to "", edit_business_expense_path(businessexpense), class: 'line_edit_icon', title: "edit mileage record" %></td>
                <td width="20px" class="row_button"><%= link_to "", businessexpense, method: :delete, class: 'line_delete_icon', title: "delete mileage record" %></td>
              </tr>
            <% end %>  
          <% end %>
          </tbody>
        </table>
    </div>
</div>
