<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @invoice} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@invoice) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_project"></div>
                        <label class="label_80">Job Reference:*</label>
                        <% if @projects %>
                            <span>
                                <%= f.collection_select(:project_id, @projects, :id, :name, {:selected => @invoice.project_id, :prompt => :true})%>
                            </span></br>
    
                            <!-- link button -->
                            <label class="label_80"></label>
                        <% end %>
                        <span>
                            <%= link_to "create new job", new_project_path, class: "form_button" %>
                        </span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_invoicetype"></div>
                        <label class="label_80">Invoice Type:*</label>
                        <span>
                            <%= f.collection_select(:invoicetype_id, Mjbook::Invoicetype.all, :id, :text, {:selected => @invoice.invoicetype_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_reference"></div>
                        <label class="label_80">Reference:</label>
                        <span>
                            <%= f.text_field :ref %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_customer_ref"></div>
                        <label class="label_80">Customer Ref:</label>
                        <span>
                            <%= f.text_field :customer_ref %>
                        </span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_terms"></div>
                        <label class="label_80">Terms:*</label>
                        <span>
                            <%= f.collection_select(:invoiceterm_id, @invoiceterms, :id, :ref, {:selected => @invoice.invoiceterm_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_date"></div>
                        <label class="label_80">Date:*</label>
                        <span>
                            <%= f.date_field :date, {placeholder: 'dd/mm/yyyy'}  %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", invoices_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>