<div class="row title_band">
    <div class="page_title">
        <h1>Summary</h1>
    </div>
    <div class="title_help" id="summaries_index"></div>
</div>

<div class="row filter_band">
    <%= form_tag summaries_path, method: :get do %>
        <div>
            <div>
                <label class="select">Period:</label>
                <%= select_tag 'yearend', nil%>
            </div>
            <%= submit_tag 'Select' %>
        </div> 
    <% end %> 
</div>


<div class="row">
    <div class="col-2-3 column_1">
        <div class="border">
            <div class="row">

                <table>
                    <thead>
                        <tr>
                            <th class="summary_item">Item</th>
                            <th class="summary_debit">Debit</th>
                            <th class="summary_credit">Credit</th>
                            <th class="row_button no_buttons_1"></th>
                        </tr>
                    </thead>
                </table>
                
				<table>
					<tbody>
                        <tr>
                            <td class="summary_item">Income</td> 
                            <td class="summary_debit"></td>
                            <td class="summary_credit"><%= pounds(@income_summary) %></td> 
                            <td class="row_button no_buttons_1">
                                <%= link_to '', payments_path, class: 'line_show_icon_show' , title: "record payment"  %>
                            </td>
                        </tr>

                        <tr>
                            <td class="summary_item">Expense</td> 
                            <td class="summary_debit"><%= pounds(@expend_summary) %></td>
                            <td class="summary_credit"></td> 
                            <td class="row_button no_buttons_1">
                                <%= link_to '', expends_path, class: 'line_show_icon_show' , title: "record payment"  %>
                            </td>
                        </tr>

                        <tr>
                            <td class="summary_item">Receivable</td> 
                            <td class="summary_debit"></td>
                            <td class="summary_credit"><%= pounds(@receivable_summary) %></td> 
                            <td class="row_button no_buttons_1">
                                <%= link_to '', invoices_path, class: 'line_show_icon_show' , title: "record payment"  %>
                            </td>
                        </tr>

                        <tr>
                            <td class="summary_item">Payable</td> 
                            <td class="summary_debit"><%= pounds(@payable_summary) %></td>
                            <td class="summary_credit"></td> 
                            <td class="row_button no_buttons_1">
                                <%= link_to '', nil, class: 'line_show_icon_show' , title: "record payment"  %>
                            </td>
                        </tr>

                        <tr>
                            <td class="summary_item">Assets (Cash)</td> 
                            <td class="summary_debit"></td>
                            <td class="summary_credit"><%= pounds(@assets_cash) %></td> 
                            <td class="row_button no_buttons_1">
                            </td>
                        </tr>
					</tbody>
				</table>

				<table class='summary_total_table'>
				    <tr class='line_row'>
				        <td class='summary_item'>Total:</td>
				        <td class='summary_debit'><%= pounds(@debit_total) %></td>
				        <td class='summary_credit'><%= pounds(@credit_total) %></td>
				     </tr>
				</table>

            </div>
        </div>
    </div>


    <div class="col-1-3 column_2">
        <div class="border">
            <div class="row">

                <table>
                    <thead>
                        <tr>
                            <th class="summary_account">Account</th>
                            <th class="summary_balance">Balance</th>
                            <th class="row_button no_buttons_1"></th>
                        </tr>
                    </thead>
                </table>

                <table>
                    <% @company_accounts.each do |account| %>
                        <tr>
                            <td class="summary_account"><%= account.name %></td> 
                            <td class="summary_balance"><%= pounds(account_balance(account)) %></td>
                            <td class="row_button no_buttons_1">
                                <%= link_to '', summary_path(account.id), class: 'line_show_icon_show' , title: "show transactions"  %>
                            </td>
                        </tr>
                     <% end %>
                </table>

                <table class='summary_total_table'>
                    <tr class='line_row'>
                        <td class='summary_account'>Total:</td> 
                        <td class='summary_balance'><%= pounds(@assets_cash) %></td>  
                     </tr>
                </table>

            </div>
        </div>
    </div>


</div>