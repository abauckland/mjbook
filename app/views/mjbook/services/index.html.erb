<div class="page_title">
    <h1>Listing Services (lump sum)</h1>
    <div class="page_title_button"><%= link_to "add product", new_service_path %> </div>
</div>

<div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="product_catetory_name">Category</th>
          <th class="product_item">Item</th>
          <th class="product_quantity">Quantity</th>
          <th class="product_unit">Unit</th>
          <th class="product_rate">Rate/Unit</th>
          <th class="product_price">Price</th>
          <th class="product_vat">Vat Rate</th>
          <th class="product_vat_due">Vat</th>
          <th class="product_total">Total</th>                                        
          <th width="75px" class="row_button">
            <%= link_to "", print_service_path(current_user.company_id), class: 'table_pdf_icon', title: "download pdf" %>
          </th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @services.each do |service| %>
              <tr>
                <td class="product_catetory_name"><%= service.productcategory.text %></td>
                <td class="product_item"><%= service.item %></td>
                <td class="product_quantity">n/a</td>
                <td class="product_unit">n/a</td>
                <td class="product_rate">n/a</td>
                <td class="product_price"><%= pounds(service.price) %></td>                
                <td class="product_vat"><%= service.vat.cat %></td>
                <td class="product_vat_due"><%= pounds(service.vat_due) %></td>
                <td class="product_total"><%= pounds(service.total) %></td>                
                <td width="75px" class="row_button">
                    <%= row_delete_link(service, 'show') %>
                    <%= row_edit_link(service, 'show') %>
                    <%= row_show_link(service, 'show') %>
                </td>        
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>