<div class="content">
    <div class="column_1">
        <div class="column_content">
            
            <% if @service.errors.any? %>
            <div class="column_error">
            <p><%= pluralize(@service.errors.count, "error") %> prohibited this detail from being saved:</p>
                  <ul>
                  <% @service.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
            </div>
            <% end %>
            
            <div class="column_sub_content">
                <div class="column_form">
                <%= form_for(@service) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <%= f.hidden_field :linetype, :value => :service %>     
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:70px">Category*:</label>                        
                        <% if @servicecategories %>
                            <div class="column_form_input"><%= f.collection_select(:productcategory_id, @servicecategories, :id, :text, {:prompt => :true}, :class => "full_width")%></div>
                            <div class="column_help_tooltip" id="product_productcategory"></div>  
                        </div>
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:70px"></label>                        
                        <% end %>
                            <div class="column_form_button"><%= link_to "add new category", new_productcategory_path %></div>  
                        </div>                    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:70px">Name*:</label>                        
                            <div class="column_form_input"><%= f.text_field :item %></div>
                            <div class="column_help_tooltip" id="product_name"></div> 
                        </div>
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:70px">Price*:</label>                        
                            <div class="column_form_input"><%= f.text_field :price, {:placeholder => "0.00", :value => number_with_precision(f.object.rate, :precision => 2)} %></div>
                            <div class="column_help_tooltip" id="product_price"></div> 
                        </div>  
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:70px">VAT*:</label>                        
                            <div class="column_form_input"><%= f.collection_select(:vat_id, Mjbook::Vat.all, :id, :cat, {:value => 1}, :class => "full_width")%></div>
                            <div class="column_help_tooltip" id="product_vat"></div> 
                        </div>
                </div>
           </div>     
                
           <div class="column_footer">
                <div class="column_line"></div>
                <div class="column_submit"><%= f.submit "save"%></div>
                <div class="column_cancel"><%= link_to "cancel", services_path %></div>
                <% end %>
           </div>
            
        </div>
    </div>
    <div class="column_2 column_2_blank"></div> 
    <div class="column_3 column_3_blank"></div> 
</div>




