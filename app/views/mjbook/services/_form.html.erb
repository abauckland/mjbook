<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @service} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@service) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <%= f.hidden_field :linetype, :value => :service %>
                    <fieldset>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="product_productcategory"></div>
                        <label class="label_80">Category:*</label>
                        <% if @servicecategories %>
                            <span>
                                <%= f.collection_select(:productcategory_id, @servicecategories, :id, :text, {:prompt => :true})%>
                            </span></br>
    
                            <!-- link button -->
                            <label class="label_80"></label>
                        <% end %>
                        <span>
                            <%= link_to "add new category", new_productcategory_path, class: "form_button" %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="product_name"></div>
                        <label class="label_80">Name:*</label>
                        <span>
                            <%= f.text_field :item %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="product_price"></div>
                        <label class="label_80">Price:*</label>
                        <span>
                            <%= f.text_field :price, {:placeholder => "0.00", :value => number_with_precision(f.object.price, :precision => 2)} %>
                        </span></br>

                       <!-- form input[select] -->
                        <div class="form_tooltip" id="product_vat"></div>
                        <label class="label_80">VAT:*</label>
                        <span>
                            <%= f.collection_select(:vat_id, Mjbook::Vat.all, :id, :cat, {:value => 1})%>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", services_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>