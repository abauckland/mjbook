<div class="row title_band">
    <div class="page_title">
        <h1>Expense Categories</h1>
    </div>
    <div class="title_help" id="hmrcexpcat_index"></div>       
    <div><%= link_to "+ category", new_hmrcexpcat_path, class: "title_button" %></div>
</div>

<div class="row">

    <div class="col-1-1 column_1">
        <div class="border">                
                
            <%= render :partial => "flash_notice" %>

            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th class="hmrc_group">Group</th>
                            <th class="hmrc_category">Category</th> 
                            <th class="row_button no_buttons_2"></th>
                        </tr>
                    </thead>
                </table>

                <table>
                    <tbody>
                        <% if @hmrcexpcats %>            
                            <% @hmrcexpcats.each do |hmrcexpcat| %>
                                <tr>
                                    <td class="hmrc_group"><%= hmrcexpcat.hmrcgroup.group.titleize %></td> 
                                    <td class="hmrc_category"><%= hmrcexpcat.category.titleize %></td> 
                                    <td class="row_button no_buttons_2">
                                        <% if hmrcexpcat_in_use(hmrcexpcat) %>
                                            <%= link_to '', hmrcexpcat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete misc" %>
                                        <% end %>                                        
                                        <%= link_to '', edit_hmrcexpcat_path(hmrcexpcat), class: 'line_edit_icon', title: "edit misc" %>
                                    </td>
                                </tr>
                            <% end %>  
                        <% end %>
                    </tbody>
                </table>
   
            </div>
        </div>
    </div>

</div>