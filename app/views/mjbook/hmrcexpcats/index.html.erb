<div class="page_title">
    <h1>Listing Expense Categories</h1>
</div>

<div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="hmrc_category">Category</th>
          <th class="hmrc_group">Group</th>                                      
          <th width="20px" class="row_button"><%= link_to "", new_hmrcexpcat_path, class: 'line_new_icon', title: "create new misc" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @hmrcexpcats.each do |hmrcexpcat| %>
              <tr>
                <td class="hmrc_category"><%= hmrcexpcat.name %></td>
                <td class="hmrc_group"><%= hmrcexpcat.item %></td>             
                <td width="20px" class="row_button"><%= link_to '', edit_hmrcexpcat_path(hmrcexpcat), class: 'line_edit_icon', title: "edit misc" %></td>
                <td width="20px" class="row_button"><%= link_to '', hmrcexpcat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete misc" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>
