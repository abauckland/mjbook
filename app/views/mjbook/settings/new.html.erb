<div class="row title_band">
    <div class="page_title">
        <h1>New Account Settings</h1>
    </div>
    <div class="title_help" id="settings_new"></div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @setting} %>
            <%= render :partial => "flash_notice" %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@setting) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="setting_domain"></div>
                        <label class="label_120">Email Domain:*</label>
                        <span>
                            <%= f.text_field :email_domain %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="setting_name"></div>
                        <label class="label_120">Email User Name:*</label>
                        <span>
                            <%= f.text_field :email_username %>
                        </span></br>

                        <!-- form input[password] -->
                        <div class="form_tooltip" id="setting_password"></div>
                        <label class="label_120">Email Password:*</label>
                        <span>
                            <%= f.password_field :email_password %>
                        </span></br>

                        <!-- form input[date] -->
                        <div class="form_tooltip" id="setting_year_start"></div>
                        <label class="label_120">Start of Accounting Year:*</label>
                        <span>
                            <%= f.date_field :year_start, {placeholder: 'dd/mm/yyyy'} %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", summaries_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>