<div class="page_title">
    <h1>Listing productcategories</h1>
</div>

<div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="product_category_name">Category Name</th>
          <th width="20px" class="row_button"><%= link_to "", new_productcategory_path, class: 'line_new_icon', title: "create new category" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @productcategories.each do |productcategory| %>
              <tr>
                <td class="product_category_name"><%= productcategory.name %></td>
                <% if !productcategory.products.any? %>
                    <td width="20px" class="row_button"><%= link_to '', productcategory, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete category" %></td>
                <% end %>                 
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>