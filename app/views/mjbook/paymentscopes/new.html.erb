<div class="row title_band">
    <div class="page_title">
        <h1>Confirm Paid Items</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @payment} %>

<!-- form column start-->
            <div class="row">
                <%= form_for @payment do |f|%>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <fieldset>
                        
                        <% @ingroups.each do |group| %>
                            <% group.inlines.each do |line| %>
    
                                <!-- form input[radio] -->
                                <label class="label_120"><%= line.item %>:</label>
                                <span>
                                    <%= check_box_tag 'line_ids[]', line.id, :checked => true %>
                                    <span><%= pounds(line.total) if line.total? %></span>
                                </span></br>
    
                            <% end %>
                        <% end %>

                        <div class="row">
                            <div class="column_line"></div>
                        </div>

                        <!-- show text line --> 
                        <label class="label_120">Total Recieved:</label>
                        <span><%= pounds(@invoice.total) %></span></br>                    

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "process payment"%>
                    <%= link_to "cancel", invoices_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>