<div class="content">
    <div class="column_1">
        <div class="column_content">
            
            <% if @misc.errors.any? %>
            <div class="column_error">
            <p><%= pluralize(@misc.errors.count, "error") %> prohibited this detail from being saved:</p>
                  <ul>
                  <% @misc.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
            </div>
            <% end %>
            
            <div class="column_sub_content">
                <div class="column_form">
                <%= form_for(@misc) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:80px">Category:</label>                        
                        <% if @misccategorys %>
                            <div class="column_form_input"><%= f.collection_select(:misccategory_id, @misccategorys, :id, :name, {:prompt => :true}, :class => "full_width")%></div>
                            <div class="column_help_tooltip" id="misc_misccategory"></div>  
                        </div>
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:80px"></label>                        
                        <% end %>
                            <div class="column_form_button"><%= link_to "add new category", new_misccategory_path %></div>  
                        </div>                    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:80px">Name:</label>                        
                            <div class="column_form_input"><%= f.text_field :item %></div>
                            <div class="column_help_tooltip" id="misc_name"></div> 
                        </div>
                </div>
           </div>     
                
           <div class="column_footer">
                <div class="column_line"></div>
                <div class="column_submit"><%= f.submit "save"%></div>
                <div class="column_cancel"><%= link_to "cancel", @miscs_path %></div>
                <% end %>
           </div>
            
        </div>
    </div>
    <div class="column_2 column_2_blank"></div> 
    <div class="column_3 column_3_blank"></div> 
</div>




