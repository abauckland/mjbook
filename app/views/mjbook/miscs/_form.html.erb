<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @misc} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@misc) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>    
                    <%= f.hidden_field :linetype, :value => :misc %>
                    <fieldset>

                       <!-- form input[text] -->
                        <div class="form_tooltip" id="product_productcategory"></div>
                        <label class="label_80">Category:*</label>
                        <% if @misccategories %>
                            <span>
                                <%= f.collection_select(:productcategory_id, @misccategories, :id, :text, {:prompt => :true})%>
                            </span></br>
    
                            <!-- link button -->
                            <label class="label_80"></label>
                        <% end %>
                        <span>
                            <%= link_to "add new category", new_productcategory_path, class: "form_button" %>
                        </span></br>


                        <!-- form input[text] -->
                        <div class="form_tooltip" id="misc_name"></div>
                        <label class="label_80">Name:*</label>
                        <span>
                            <%= f.text_field :item %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", miscs_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>


