<div class="row title_band">
    <div class="page_title">
        <h1>Record Invoice Payment</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @payment} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@payment) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <%= f.hidden_field :price, :value => @invoice_items[:price] %>
                    <%= f.hidden_field :vat, :value => @invoice_items[:vat] %>
                    <%= f.hidden_field :total, :value => @invoice_items[:total] %>
                    <%= f.hidden_field :inc_type, :value => 'invoice' %>
                    
                    <%= hidden_field_tag :invoice_id, @invoice.id %>
                    <%= hidden_field_tag :invoice_item_ids, @invoice_items[:ids] %>
                    <fieldset>
                                
                        <!-- show text line -->
                        <label class="label_80">Invoice Ref:</label>
                        <span><%= @invoice.ref %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Amount Invoiced:</label>
                        <span><%= pounds(@invoice.total) %></span></br>
                            
                        <!-- show text line -->
                        <label class="label_80">Amount Paid:</label>
                        <span><%= pounds(@invoice_items[:total]) %></span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="payexpense_paymethod"></div>
                        <label class="label_80">Payment Method:*</label>
                        <span>
                            <%= f.collection_select(:paymethod_id, @paymethods, :id, :text, {selected: @expend.paymethod_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="payexpense_account"></div>
                        <label class="label_80">Account Paid From:*</label>
                        <span>
                            <%= f.collection_select(:companyaccount_id, @companyaccounts, :id, :name, {selected: @expend.companyaccount_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="payexpense_date"></div>
                        <div class="form_tooltip">Date:*</label>
                        <span>
                            <%= f.date_field :date, :value => Time.now.strftime('%Y/%m/%d') %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="payexpense_notes"></div>
                        <label class="label_80">Notes:</label>
                        <span>
                            <%= f.text_field :note %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel",invoices_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>