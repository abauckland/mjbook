<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @payment} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@payment) do |f| %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <fieldset>

                        <% if @projects %>
                        <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_ref"></div>
                        <label class="label_120">Invoice Ref:*</label>
                        <span>
                            <%= f.collection_select(:invoice_id, @invoices, :id, :ref, {:selected => @payment.invoice_id, :prompt => :true})%>
                        </span></br>
                        <% end %> 

                       <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_paymethod"></div>
                        <label class="label_120">Transfer Method:*</label>
                        <span>
                            <%= f.collection_select(:paymethod_id, @paymethods, :id, :text, {:selected => @transfer.paymethod_id, :prompt => :true})%>
                        </span></br>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="invoice_account"></div>
                        <label class="label_120">To Account:*</label>
                        <span>
                            <%= f.collection_select(:account_id, @companyaccounts, :id, :name, {:selected => @transfer.account_from_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_price"></div>
                        <label class="label_120">Total (ex VAT):*</label>
                        <span>
                            <%= f.text_field :price, {:placeholder => "0.00", :value => number_with_precision(f.object.price, :precision => 2)} %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_vat"></div>
                        <label class="label_120">VAT Paid:*</label>
                        <span>
                            <%= f.text_field :vat, {:placeholder => "0.00", :value => number_with_precision(f.object.vat, :precision => 2)} %>
                        </span></br>
                        
                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_total"></div>
                        <label class="label_120">Total (inc VAT):*</label>
                        <span>
                            <%= f.text_field :total, {:placeholder => "0.00", :value => number_with_precision(f.object.total, :precision => 2)} %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_date"></div>
                        <label class="label_120">Date:*</label>
                        <span>
                            <%= f.date_field :date, :value => Time.now.strftime('%Y/%m/%d')%>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="invoice_note"></div>
                        <label class="label_120">Notes:</label>
                        <span>
                            <%= f.date_field :note, :value => Time.now.strftime('%Y/%m/%d') %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", quotes_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>