<div class="row title_band">
    <div class="page_title">
        <h1>Payment</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <%= render :partial => "flash_notice" %>
<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line -->
                        <label class="label_80">Reference:</label>
                        <span><%= @payment.ref if @payment.ref %></span></br>

                        <!-- show text line -->
                        <label class="label_80">Inovice:</label>
                        <span><%= @payment.invoice.ref if @payment.ref %></span></br>
                     
                        <!-- show text line -->
                        <label class="label_80">Date:</label>
                        <span><%= @payment.date.strftime("%d/%m/%y") %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">Payment Method:</label>
                        <span><%= @payment.paymethod.method.titleize %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Account:</label>
                        <span><%= @payment.companyaccount.name.titleize %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@payment.price) %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@payment.vat) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@payment.total) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Notes:</label>
                        <span><%= @payment.note %></span></br>

                    </div>
                </div>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to "edit details", edit_payment_path(@payment) %>
                    <%= link_to "back", payments_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>




