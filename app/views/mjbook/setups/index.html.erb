<div class="row title_band">
    <div class="page_title">
        <h1>Book Keeping Set Up</h1>
    </div>
</div>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <div class="row">

<!-- column text start-->     
                <div class="row">
                    <div class="column_text">
                        <p>Please add the following details need to be provided before using the book keeping module:</p>
                        <ul>
                            <%= check_email(current_user) %>
                            <%= check_account(current_user) %>
                            <%= check_mileage(current_user) %>
                        </ul>
                    </div>
                </div>

            </div>

<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_action(current_user) %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>


