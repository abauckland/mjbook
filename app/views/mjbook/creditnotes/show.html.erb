<div class="row title_band">
    <div class="page_title">
        <h1>Creditnote</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <%= render :partial => "flash_notice" %>
<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line -->
                        <label class="label_80">Reference:</label>
                        <span><%= @creditnote.ref if @creditnote.ref %></span></br>
                     
                        <!-- show text line -->
                        <label class="label_80">Date:</label>
                        <span><%= @creditnote.date.strftime("%d/%m/%y") %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@creditnote.price) %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@creditnote.vat) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@creditnote.total) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Notes:</label>
                        <span><%= @creditnote.note %></span></br>

                    </div>
                </div>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to "edit details", edit_creditnote_path(@creditnote) %>
                    <%= link_to "back", creditnotes_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>




