<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @transfer} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@transfer) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <fieldset>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="transfer_account_from"></div>
                        <label class="label_100">From Account:*</label>
                        <span>
                            <%= f.collection_select(:account_from_id, @companyaccounts, :id, :name, {:selected => @transfer.account_from_id, :prompt => :true})%>
                        </span></br>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="transfer_account_to"></div>
                        <label class="label_100">To Account:*</label>
                        <span>
                            <%= f.collection_select(:account_to_id, @companyaccounts, :id, :name, {:selected => @transfer.account_to_id, :prompt => :true})%>
                        </span></br>

                       <!-- form input[select -->
                        <div class="form_tooltip" id="transfer_paymethod"></div>
                        <label class="label_100">Transfer Method:*</label>
                        <span>
                            <%= f.collection_select(:paymethod_id, @paymethods, :id, :text, {:selected => @transfer.paymethod_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="transfer_total"></div>
                        <label class="label_100">Total:*</label>
                        <span>
                            <%= f.text_field :total, {:placeholder => "0.00", :value => number_with_precision(f.object.total, :precision => 2)} %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="transfer_date"></div>
                        <label class="label_100">Date:*</label>
                        <span>
                            <%= f.date_field :date, {placeholder: 'dd/mm/yyyy'}  %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", transfers_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>