<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @companyaccount} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@companyaccount) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="companyaccount_name"></div>
                        <label class="label_110">Name:*</label>
                        <span>
                            <%= f.text_field :name %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="companyaccount_provider"></div>
                        <label class="label_110">Provider:</label>
                        <span>
                            <%= f.text_field :provider %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="companyaccount_balance"></div>
                        <label class="label_110">Opening Balance:*</label>
                        <span>
                            <%= f.text_field :balance, {:placeholder => "0.00", :value => number_with_precision(f.object.balance, :precision => 2)}  %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="companyaccount_date"></div>
                        <label class="label_110">Date of Balance:*</label>
                        <span>
                            <%= f.date_field :date, {placeholder: 'dd/mm/yyyy'}  %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= companyaccount_cancel %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>

