<%= render :partial => "notice_band" %>

<div class="row title_band">
    <div class="page_title">
        <h1>Writeoff</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line -->
                        <label class="label_80">Reference:</label>
                        <span><%= @writeoff.ref if @writeoff.ref %></span></br>
                     
                        <!-- show text line -->
                        <label class="label_80">Date:</label>
                        <span><%= @writeoff.date.strftime("%d/%m/%y") %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Price:</label>
                        <span><%= pounds(@writeoff.price) %></span></br>
                                
                        <!-- show text line -->
                        <label class="label_80">VAT:</label>
                        <span><%= pounds(@writeoff.vat) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Total:</label>
                        <span><%= pounds(@writeoff.total) %></span></br>
    
                        <!-- show text line -->
                        <label class="label_80">Notes:</label>
                        <span><%= @writeoff.note %></span></br>

                    </div>
                </article>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to "edit details", edit_writeoff_path(@writeoff) %>
                    <%= link_to "back", writeoffs_path %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>




