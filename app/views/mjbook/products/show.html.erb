<%= render :partial => "notice_band" %>

<div class="row title_band">
    <div class="page_title">
        <h1>Product Details</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- column start-->
            <div class="row">
                <article>
                    <div class="article-set">

                        <!-- show text line --> 
                        <label class="label_80">Category:</label>
                        <span><%= @product.productcategory.text %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Name:</label>
                        <span><%= @product.item %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Quantity:</label>
                        <span><%= @product.quantity %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Unit:</label>
                        <span><%= @product.unit.text %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Unit Rate:</label>
                        <span><%= @product.rate %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Price:</label>
                        <span><%= @product.price %></span></br>

                        <!-- show text line --> 
                        <label class="label_80">VAT Rate:</label>
                        <span><%= @product.vat.rate %></span></br>
                            
                        <!-- show text line --> 
                        <label class="label_80">VAT:</label>
                        <span><%= @product.vat_due %></span></br>
    
                        <!-- show text line --> 
                        <label class="label_80">Total:</label>
                        <span><%= @product.total %></span></br>

                    </div>
                </article>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= link_to 'edit item', edit_product_path(@product) %>
                    <%= link_to 'back', products_path %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>

