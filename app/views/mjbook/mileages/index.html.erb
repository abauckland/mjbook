<div class="page_title">
    <h1>Mileage Expenses</h1>
    <div class="page_title_button"><%= link_to "add mileage", new_mileage_path %> </div>    
</div>

 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="mileage_date">Date</th>
          <th class="mileage_job">Job</th>
          <th class="mileage_mode">Mode</th>
          <th class="mileage_start">Start Location</th>
          <th class="mileage_destination">Destination</th>
          <th class="mileage_return">Return</th>
          <th class="mileage_distance">Distance</th>
          <th width="20px" class="row_button"></th>
          <th width="20px" class="row_button"><%= link_to "", print_mileages_path, class: 'table_pdf_icon', title: "download pdf" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @mileages.each do |mileage| %>
              <tr>
                <td class="mileage_date"><%= mileage.date %></td>
                <td class="mileage_job"><%= mileage.project.ref_name %></td>
                <td class="mileage_mode"><%= mileage.mileagemethod.mode %></td>
                <td class="mileage_start"><%= mileage.start %></td>
                <td class="mileage_destination"><%= mileage.finish %></td>
                <td class="mileage_return"><%= mileage.return %></td>
                <td class="mileage_distance"><%= mileage.distance %></td>
                <td width="20px" class="row_button"><%= link_to "", edit_mileage_path(mileage), class: 'line_edit_icon', title: "edit mileage record" %></td>
                <% if mileage_in_use(mileage) %>
                    <td width="20px" class="row_button"><%= link_to "", mileage, method: :delete, class: 'line_delete_icon', title: "delete mileage record" %></td>
                <% else %>
                    <td width="20px" class="row_button"></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

