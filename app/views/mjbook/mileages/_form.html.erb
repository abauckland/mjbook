<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @mileage} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@mileage) do |f| %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <%= f.hidden_field :hmrcexpcat_id, :value => 1 %>   
                    <fieldset>

                        <!-- form input[select -->
                        <div class="form_tooltip" id="mileage_project"></div>
                        <label class="label_100">Job Reference:*</label>
                        <% if @projects %>
                            <span>
                                <%= f.collection_select(:project_id, @projects, :id, :name, {:selected => @mileage.project_id, :prompt => :true})%>
                            </span></br>
    
                            <!-- link button -->
                            <label class="label_100"></label>
                        <% end %>
                        <span>
                            <%= link_to "add new job", new_project_path, class: "form_button" %>
                        </span></br>

                        <!-- form input[date] -->
                        <div class="form_tooltip" id="mileage_date"></div>
                        <label class="label_100">Date:*</label>
                        <span>
                           <%= f.date_field :date, :value => Time.now.strftime('%Y/%m/%d')  %>
                        </span></br>

                        <!-- form input[select] -->
                        <div class="form_tooltip" id="mileage_mileagemethod"></div>
                        <label class="label_100">Mode:*</label>
                        <span>
                            <%= f.collection_select(:mileagemode_id, @mileagemodes, :id, :mode, {:selected => @mileage.mileagemode_id, :prompt => :true})%>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip"id="mileage_start"></div>
                        <label class="label_100">Start:*</label>
                        <span>
                            <%= f.text_field :start %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="mileage_finish"></div>
                        <label class="label_100">Destination:*</label>
                        <span>
                            <%= f.text_field :finish %>
                        </span></br>

                        <!-- form input[text] -->
                        <div class="form_tooltip" id="mileage_distance"></div>
                        <label class="label_100">Total Mileage:*</label>
                        <span>
                            <%= f.text_field :distance %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", personals_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>